<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/ivActionThumb"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="6dp"
            android:src="@color/colorPrimaryDark"
            app:civ_border_width="3dp"
            app:civ_border_color="#fff" />

        <TextView
            android:id="@+id/tvActionType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="12dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="22dp"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/ivActionThumb"
            android:text="Title goes here"
            android:textColor="@color/primary_text_default_material_light"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/tvActionWhatafield"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="12dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="Subtitle here"
            android:layout_below="@+id/tvActionType"
            android:layout_toRightOf="@+id/ivActionThumb"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btActionView"
            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvActionWhatafield"
            android:layout_alignParentLeft="true"
            android:text="@string/title_view"
            android:textColor="@color/accent_material_light" />

        <TextView
            android:id="@+id/tvActionTimeAgo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Time ago"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@+id/btActionView"
            android:layout_below="@+id/tvActionWhatafield"
            android:textSize="16sp" />


    </RelativeLayout>
</android.support.v7.widget.CardView>
